        <Button
            android:id="@+id/btnCidades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_marginBottom="10dp"
            android:elevation="25dp"
            android:onClick="importarCidades"
            android:text="Importar Cidades" />

        <Button
            android:id="@+id/btnVendedoresConfigGeral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_marginBottom="10dp"
            android:elevation="25dp"
            android:onClick="importarVendedores"
            android:text="Importar Vendedores" />

        <Button
            android:id="@+id/btnClientesConfigGeral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_marginBottom="10dp"
            android:elevation="25dp"
            android:onClick="importarClientes"
            android:text="Importar Clientes" />

        <Button
            android:id="@+id/btnGruposProdutosConfigGeral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:elevation="25dp"
            android:onClick="importarCategorias"
            android:text="Importar Grupos de Produtos" />

        <Button
            android:id="@+id/btnProdutoConfigGeral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:elevation="25dp"
            android:onClick="importarProdutos"
            android:text="Importar Produtos" />

        <Button
            android:id="@+id/btnFormaPgto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:elevation="25dp"
            android:onClick="importarFormaPgto"
            android:text="Importar Forma Pgto" />

    </LinearLayout>

</ScrollView>